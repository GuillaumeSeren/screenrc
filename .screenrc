# ------------------------------------------------------------------------------
# SCREEN SETTINGS
# ------------------------------------------------------------------------------

#Do not show welcome message
startup_message off
#NETHACK private jokes
nethack on

#defflow on # will force screen to process ^S/^Q
deflogin on

# Detach screen session, if user disconnect
autodetach on

# turn visual bell on
vbell on

# define a bigger scrollback, default is 100 lines
defscrollback 10000

# ------------------------------------------------------------------------------
# SCREEN KEYBINDINGS
# ------------------------------------------------------------------------------

# Change escape key, par : ctrl + z
escape ^Zz

#Modif de deplacement entre les session ctrl droite / ctrl gauche
bindkey ^[[1;5D prev
bindkey ^[[1;5C next

# ------------------------------------------------------------------------------
# TERMINAL SETTINGS
# ------------------------------------------------------------------------------


caption string "%{= kw}%-Lw%{= kG}%{+b}[%n %t]%{-b}%{= kw}%+Lw%1`"
caption always

